{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "outDir": "dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "rootDir": "src"
  },
  "compileOnSave": true,
  "references": [
    {
      "path": "../jwala-lib/**/*.ts"
    }
  ],
  "include": [   
    "src/**/*"
  ]
}